<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAEC"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Top_padding"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/id_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/id_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ps_bt"
            android:paddingLeft="20dp">

            <EditText
                android:id="@+id/Id"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ps_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="30dp"
        android:paddingRight="50dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:id="@+id/ps_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ps_bt"
            android:paddingLeft="20dp">

            <EditText
                android:id="@+id/Ps"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/google_loyout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/google_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/google_bt"
            android:text="GOOGLE_LOGIN" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Bt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <android.widget.Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/small_bt"
            android:paddingBottom="10dp"
            android:text="LOGIN" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bt_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bt_container"
            android:layout_width="413dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_weight="2"
                android:gravity="right|center_horizontal"
                android:text="Search"
                android:textAllCaps="true"
                android:textColor="#737373"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/line"
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:paddingTop="3dp"
                tools:srcCompat="@drawable/line" />

            <TextView
                android:id="@+id/join"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_weight="2"
                android:gravity="center_horizontal|left"
                android:text="JOIN"
                android:textColor="#737373"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>